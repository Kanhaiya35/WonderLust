<% layout("layouts/boilerplate") %>

<div class="container mt-5">
  <div class="col-lg-8 col-md-10 mx-auto">
    <div class="card shadow-lg border-0 rounded-4 p-4">
      <h2 class="text-center mb-4 fw-bold">üìù Create a New Listing</h2>

      <form method="POST" action="/listings" novalidate class="needs-validation">
        
        <!-- Title -->
        <div class="mb-3">
          <label for="title" class="form-label fw-semibold">Title</label>
          <input 
            id="title" 
            name="listing[title]" 
            placeholder="Enter a catchy title (e.g., Cozy Cottage by the Lake)" 
            type="text" 
            class="form-control" 
            required
          >
          <div class="invalid-feedback">Please enter a valid title.</div>
        </div>

        <!-- Description -->
        <div class="mb-3">
          <label for="description" class="form-label fw-semibold">Description</label>
          <textarea 
            id="description" 
            name="listing[description]" 
            class="form-control" 
            rows="4" 
            placeholder="Write a short, appealing description..." 
            required
          ></textarea>
          <div class="invalid-feedback">Please add a description for your listing.</div>
        </div>

        <!-- Image -->
        <div class="mb-3">
          <label for="image" class="form-label fw-semibold">Image Link</label>
         <input 
  id="image" 
  name="listing[image][url]" 
  placeholder="Paste image URL (optional)" 
  type="text" 
  class="form-control"
>
          <small class="text-muted">Tip: You can use Unsplash or any public image link.</small>
        </div>

        <!-- Price & Country -->
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="price" class="form-label fw-semibold">Price (‚Çπ)</label>
            <input 
              id="price" 
              name="listing[price]" 
              placeholder="e.g., 2500" 
              class="form-control" 
              required
            >
            <div class="invalid-feedback">Please enter a valid price.</div>
          </div>

          <div class="col-md-6 mb-3">
            <label for="country" class="form-label fw-semibold">Country</label>
            <input 
              id="country" 
              name="listing[country]" 
              placeholder="e.g., India" 
              type="text" 
              class="form-control" 
              required
            >
            <div class="invalid-feedback">Please enter a valid country name.</div>
          </div>
        </div>

        <!-- Location -->
        <div class="mb-3">
          <label for="location" class="form-label fw-semibold">Location</label>
          <input 
            id="location" 
            name="listing[location]" 
            placeholder="e.g., Pune, Maharashtra" 
            type="text" 
            class="form-control" 
            required
          >
          <div class="invalid-feedback">Please enter a valid location.</div>
        </div>

        <!-- Submit -->
        <div class="d-grid mt-4">
          <button type="submit" class="btn btn-dark btn-lg fw-semibold">
            <i class="bi bi-plus-circle me-1"></i> Add Listing
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
