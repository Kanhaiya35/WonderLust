<% layout("layouts/boilerplate") %>

<div class="container mt-4">
  <h3 class="mb-4 text-center fw-bold"><%= listing.title %></h3>

  <div class="card shadow-lg mb-4 mx-auto listing-card" style="max-width: 600px;">

    <!-- Image -->
    <img 
      src="<%= listing.image && listing.image.url ? listing.image.url : 'https://via.placeholder.com/600x350?text=No+Image+Available' %>" 
      class="card-img-top rounded-top" 
      alt="<%= listing.title %>" 
      style="object-fit: cover; height: 350px; width: 100%;"
    >

    <div class="card-body">
      <p class="card-text text-muted mb-3">Owned by
        <i><%= listing.owner && listing.owner.username ? listing.owner.username : "Unknown Owner" %></i>
      </p>

      <p class="card-text text-muted mb-3">
        <%= listing.description || "No description available." %>
      </p>

      <ul class="list-group list-group-flush mb-3">
        <li class="list-group-item">
          <strong>Price:</strong>
          <% if (listing.price) { %>
            <span class="text-success fw-semibold">&#8377; <%= listing.price.toLocaleString("en-IN") %></span>
          <% } else { %>
            Not specified
          <% } %>
        </li>
        <li class="list-group-item">
          <strong>Location:</strong> <%= listing.location || "Not specified" %>
        </li>
        <li class="list-group-item">
          <strong>Country:</strong> <%= listing.country || "Not specified" %>
        </li>
      </ul>

      <div class="d-flex justify-content-between">

        <% if (currUser && listing.owner && currUser._id.toString() === listing.owner._id.toString()) { %>

          <!-- Edit Button -->
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary px-4">Edit</a>

          <!-- Delete Button -->
          <form 
            method="POST" 
            action="/listings/<%= listing._id %>?_method=DELETE"
            onsubmit="return confirm('Are you sure you want to delete this listing?');"
          >
            <button type="submit" class="btn btn-danger px-4">Delete</button>
          </form>

        <% } %>

      </div>

      <a href="/listings" class="btn btn-secondary mt-3 w-100">Back to Listings</a>
    </div>

    <hr class="m-0">


    <!-- Review Section -->
    <div class="p-4">
      <% if(currUser) {  %>
      <h4 class="fw-bold mb-3">Leave a Review</h4>
      <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
        <div class="mb-3">
          <label for="rating" class="form-label">Rating</label>
          <input type="range" class="form-range" min="1" max="5" id="rating" name="review[rating]">
        </div>
        <div class="mb-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea 
            name="review[comment]" 
            id="comment" 
            cols="30" 
            rows="5" 
            class="form-control" 
            placeholder="Write your thoughts..." 
            required
          ></textarea>
          <div class="invalid-feedback">Please add some comments for review.</div>
        </div>
        <button class="btn btn-success w-100">Submit</button>
      </form>
      <% } %>

      <!-- All Reviews Section -->
      <p class="fw-bold">All Reviews</p>
      <div class="row">
        <% if (listing.reviews && listing.reviews.length > 0) { %>
          <% for (let review of listing.reviews) { %>
            <div class="card col-12 col-md-5 ms-3 mb-3 shadow-sm">
              <div class="card-body">
                <h6 class="card-title fw-semibold">@<%= review.author.username %></h6>
                <p class="card-text mb-1"><%= review.comment %></p>
                <p class="card-text text-muted"><%= review.rating %> ‚≠ê</p>
              </div>
              <form 
                method="POST" 
                action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" 
                class="px-3 pb-3"
              >
                <button class="btn btn-sm btn-dark">Delete</button>
              </form>
            </div>
          <% } %>
        <% } else { %>
          <p class="text-muted ms-3">No reviews yet.</p>
        <% } %>
      </div>
    </div>
  </div>
</div>
